<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:id="@+id/CardViewTrainer2"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="18sp"
                android:id="@+id/TXTNAMET2"
                android:layout_alignStart="@+id/TXTEMAILT2"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/guideLine22"
                android:layout_marginStart="5dp"
                android:id="@+id/txtNameTrainer2"
                android:layout_alignBaseline="@+id/TXTNAMET2"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:id="@+id/TXTEMAILT2"
                android:layout_toEndOf="@+id/imgmailavailtrainer"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_below="@+id/txtNameTrainer2"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/guideLine22"
                android:layout_marginStart="5dp"
                android:id="@+id/txtEmailTrainer2"
                android:layout_alignBaseline="@+id/TXTEMAILT2"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/TXTEMAILT2"
                android:src="@drawable/ic_mail"
                android:id="@+id/imgmailavailtrainer"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone no. :"
                android:id="@+id/TXTPHONET2"
                android:layout_toEndOf="@+id/imgcallavailtrainer"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:layout_below="@+id/txtEmailTrainer2"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/TXTPHONET2"
                android:src="@drawable/ic_call"
                android:id="@+id/imgcallavailtrainer"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/guideLine22"
                android:id="@+id/txtPhoneTrainer2"
                android:layout_marginStart="5dp"
                android:layout_alignBaseline="@+id/TXTPHONET2"
                />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/TXTPHONET2"
                android:id="@+id/guideLine22"
                />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>