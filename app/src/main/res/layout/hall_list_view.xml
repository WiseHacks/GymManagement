<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:id="@+id/CardViewHall"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imgsHall"
            android:padding="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imgDeleteHall"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_delete_member"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="45dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="18sp"
                android:id="@+id/TXTNAMEH"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/guideLine3"
                android:layout_marginStart="5dp"
                android:id="@+id/txtNameHall"
                android:layout_alignBaseline="@+id/TXTNAMEH"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening Hr :"
                android:id="@+id/TXTHRH"
                android:textSize="18sp"
                android:layout_below="@+id/txtNameHall"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening Hr"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/guideLine3"
                android:layout_marginStart="5dp"
                android:id="@+id/txtHrHall"
                android:layout_alignBaseline="@+id/TXTHRH"
                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/TXTHRH"
                android:id="@+id/guideLine3"
                />



        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>