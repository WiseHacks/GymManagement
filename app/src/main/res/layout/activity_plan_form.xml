<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanFormActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edtPlanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ems="10"
        android:hint="Exercise Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263" />

    <EditText
        android:id="@+id/edtPlanEquip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ems="10"
        android:hint="Equipment (NA,Name)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtPlanName"
        app:layout_constraintStart_toStartOf="@+id/edtPlanName"
        app:layout_constraintTop_toBottomOf="@+id/edtPlanName" />

    <Button
        android:id="@+id/btnplanAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Add"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPlanFrom"
        app:layout_constraintVertical_bias="0.328" />

    <EditText
        android:id="@+id/edtPlanDesc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/edtPlanEquip"
        app:layout_constraintStart_toStartOf="@+id/edtPlanEquip"
        app:layout_constraintTop_toBottomOf="@+id/edtPlanEquip" />

    <EditText
        android:id="@+id/edtPlanFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ems="10"
        android:hint="Submitted By"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtPlanDesc"
        app:layout_constraintStart_toStartOf="@+id/edtPlanDesc"
        app:layout_constraintTop_toBottomOf="@+id/edtPlanDesc" />

    <Button
        android:id="@+id/btnplanAddedAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add again"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="@+id/btnplanAdded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/btnplanAdded" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPlanDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>